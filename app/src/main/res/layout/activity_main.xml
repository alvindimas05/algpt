<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/nav_bg"
        android:gravity="center"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:textFontWeight="500"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|end">
            <ImageButton
                android:id="@+id/btn_reset"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_reset"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/prompt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="70dp"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/insert_prompt_msg"/>
        <EditText
            android:id="@+id/prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#E3E3E3"
            android:textColorHint="#686868"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="5"
            android:hint="@string/default_prompt_hint"
            android:text="@string/default_prompt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your display name (optional)"/>
        <EditText
            android:id="@+id/user_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#E3E3E3"
            android:textColorHint="#686868"
            android:hint="Your display name"
            android:text="User"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="AI display name (optional)"/>
        <EditText
            android:id="@+id/ai_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#E3E3E3"
            android:textColorHint="#686868"
            android:hint="AI display name"
            android:text="Assistant"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/chat_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="55dp"
        android:orientation="vertical">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:minHeight="40dp"
                android:padding="10dp"
                android:background="@drawable/input_bg"
                android:inputType="textMultiLine|textCapSentences"
                android:textSize="16sp"
                android:textColorHint="#878686"
                android:hint="Send a message"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="80dp"
            android:gravity="bottom|end"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_send"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>